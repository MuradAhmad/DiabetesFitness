<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/idDashboard"


    xmlns:app="http://schemas.android.com/apk/res-auto">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"

        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_footsteps"

            />
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Steps: "
            android:paddingLeft="5dp"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Goal: "
            android:paddingLeft="5dp"
            />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_dashboard_circle"
            android:layout_gravity="center"
            />




        <Button
            android:id="@+id/btnWeeklyLogs"
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_button"
            android:text="Weakly Logs"
            android:textColor="@color/white"
            android:textStyle="normal"/>

        <Button
            android:id="@+id/btnBloodSugar"
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_button"
            android:text="Blood Sugar"
            android:textColor="@color/white"
            android:textStyle="normal"/>
        <Button
            android:id="@+id/btnBmi"
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_button"
            android:text="BMI"
            android:textColor="@color/white"
            android:textStyle="normal"/>



    </LinearLayout>

    <android.support.design.widget.NavigationView
        app:headerLayout="@layout/header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/menuWhite"
        app:itemTextColor="@color/menuDarkGray"
        app:itemIconTint="@color/menuDarkGray"
        app:menu="@menu/menu"
        android:layout_gravity="start"





        >

    </android.support.design.widget.NavigationView>




</android.support.v4.widget.DrawerLayout>